# AI-Anime 后端配置示例
# 复制为 config.yaml 并填写实际值，config.yaml 已在 .gitignore 中
# 敏感信息（API Key、密码等）建议通过环境变量 APP_* 注入

app:
  port: 3737
  mode: debug
  secret: change-me-in-production

# PostgreSQL 配置，密码等敏感信息建议用 APP_DB_PASSWORD 环境变量
db:
  # dsn: postgres://user:password@localhost:5432/ai_anime?sslmode=disable  # 可选，完整连接串优先
  host: localhost
  port: 5432
  user: postgres
  password: ""  # 建议用 APP_DB_PASSWORD
  dbname: ai_anime

redis:
  addr: localhost:6379
  password: ""
  db: 0

storage:
  driver: local  # local | s3 | oss
  local_root: ./data/uploads
  base_url: /files
  # S3/OSS 可选（driver=s3 或 oss 时使用）
  # endpoint: ""   # 如 oss-cn-hangzhou.aliyuncs.com
  # bucket: ""
  # region: us-east-1
  # access_key: ""
  # secret_key: ""

# 管理员初始账号（仅用于首次种子数据）
admin:
  username: admin
  password: admin123

# AI 服务 API Key，建议通过环境变量注入
llm:
  deepseek_key: ""
  kimi_key: ""
  doubao_key: ""
  aliyun_key: ""

image:
  seedream_key: ""
  wanx_key: ""
  cogview_key: ""
  flux_key: ""
  stability_key: ""

video:
  runway_key: ""
  seedance_key: ""
  kling_key: ""
  cogvideo_key: ""

tts:
  volcengine_key: ""
  volcengine_appid: ""
  cosyvoice_key: ""
  fish_audio_key: ""
  minimax_key: ""

music:
  suno_key: ""
  suno_base_url: ""

kie:
  api_key: ""
